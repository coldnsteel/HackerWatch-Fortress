{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node@2.15.10",
      "config": { "nodeVersion": "18" }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/stats",
      "dest": "/server.js"
    },
    {
      "src": "/events",
      "dest": "/server.js"
    },
    {
      "src": "/public/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
}
